	"version": "2.0.0",
	"tasks": [
		{
			"label": "xmake build",
			"type": "shell",
			"command": "cd ${workspaceFolder} && xmake build -r",
		},
		{
			"label": "xmake run",
			"type": "shell",
			"command": "cd ${workspaceFolder} && xmake run",
		},
		{
			"label": "xmake clean",
			"type": "shell",
			"command": "cd ${workspaceFolder} && xmake clean",
		}
	]
}